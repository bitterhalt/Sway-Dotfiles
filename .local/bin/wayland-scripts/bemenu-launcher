#!/bin/bash

# Onedark
FONT="JetBrains Mono 13"
BG="#14161B"
FG="#abb2bf"
BG2="#282C34"
PURPLE="#bf68d9"


bemenu-run \
    -p ">>" \
    -i \
    --fn "$FONT" \
    --fb "$BG"\
    --ff "$FG"\
    --nb "$BG"\
    --nf "$FG"\
    --tb "$BG"\
    --hb "$BG2"\
    --tf "$PURPLE"\
    --hf "$PURPLE"\
    --nf "$FG"\
    --af "$FG"\
    --ab "$BG"\
    --hp "10" \
    -H "28"

