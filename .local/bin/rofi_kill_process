#!/usr/bin/env bash
# https://github.com/bitterhalt

lines="-l 17"
theme_path="~/.config/rofi/rofi-killer.rasi"
selected="$(ps -a -u $USER | \
            rofi -dmenu -i -p "Kill!" \
            -theme $theme_path \
            $lines | \
            awk '{print $1" "$4}')"

if [[ ! -z $selected ]]; then
    answer="$(echo -e "yes\nno" | \
            rofi -dmenu -i -p "KILL! $selected?" \
            -theme $theme_path \
            $lines )"

    if [[ $answer == "yes" ]]; then
        selpid="$(awk '{print $1}' <<< $selected)"
        kill -9 $selpid
    fi
fi

exit 0

