// Forked from: https://github.com/newmanls/dotfiles/tree/master/.config/rofi //
* {
  font: "JetBrains Mono Medium 10";
  background-color : transparent;
  text-color       : @fg0;
  margin  : 0;
  padding : 0;
  spacing : 0;
}
@import                          "~/.config/rofi/themes/onedark.rasi"

element-icon, element-text, scrollbar {
  cursor: pointer;
}
configuration {
    window-format:              "{c} :: {t}";
    display-ssh:    "ssh:";
    display-run:    "run:";
    display-drun:   "drun:";
    display-window: "window:";
    display-combi:  "combi:";}

window {
  location : center;
  width    : 480;

  background-color : @bg1;
  border: 1px solid;
  border-color: @fg1;
}

mainbox {
  padding : 16px;
  spacing : 16px;
}

inputbar {
  padding          : 10px;
  spacing          : 4px;
  background-color : @bg0;
  children         : [ prompt, entry ];
}

entry,
element-text {
  vertical-align: 0.5;
}

prompt {
    text-color: @fg1;
}

listview {
  columns : 1;
  lines   : 8;
  spacing : 4px;
  fixed-columns: true;
  fixed-height: true;
  scrollbar: false;
}

scrollbar {
  handle-width: 4px;
  handle-color: @fg1;
}

element {
  orientation   : horizontal;
  spacing       : 8px;
  padding       : 8px;
}

element normal urgent {
  text-color: @yellow;
}

element normal active {
  text-color: @fg1;
}

element selected {
  background-color: @bg2;
}

element selected urgent {
  background-color: @yellow;
}

element-icon {
  size: 1.5em;
}

element-text {
  text-color: inherit;
  highlight: none;
}
