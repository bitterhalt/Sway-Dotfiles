###############
# Sway config #
###############

font pango: JetBrains Mono 10

# Disable_window_borders
default_border pixel 2
default_floating_border pixel 2

# Set inner/outer gaps
gaps inner 5
gaps outer 0

# Defaults
set $mod Mod4
set $alt  Mod1
set $left h
set $down j
set $up k
set $right l
set $term footclient
set $pass ~/.local/bin/pass_menu
set $lock ~/.config/sway/scripts/screenlocker

# Tofi
set $tofi_run  tofi-run | xargs swaymsg exec --
set $tofi_full $HOME/.config/tofi/scripts/drun_full.sh
set $tofi_drun  tofi-drun --drun-launch=true
set $tofi_winlist $HOME/.config/tofi/scripts/tofi_window
set $tofi_power $HOME/.config/tofi/scripts/tofi_power-menu
set $tofi_screenshot $HOME/.config/tofi/scripts/tofi_screenshot

###########
# io-conf #
###########
# You can get the names of your outputs by running: swaymsg -t get_outputs

output DP-1 res 2560x1440@75Hz
output * bg ~/.local/share/wall/bg fill
# Keyboard
input type:keyboard {
    xkb_layout fi
}
# Mouse
input type:pointer {
    accel_profile "flat"
#        dwt enabled
        pointer_accel 0
}
# Touchpad
input "type:touchpad" {
    dwt enabled
        tap enabled
        middle_emulation enabled
}

######################
# Idle configuration #
######################

exec swayidle -w \
         timeout 1800 'swaylock -f -C ~/.config/swaylock/config' \
         timeout 3600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
         before-sleep 'swaylock -f -C ~/.config/swaylock/config'

#########
# Rules #
#########

