# Sway config
font pango: JetBrains Mono 10

# Disable_window_borders
default_border pixel 2
default_floating_border pixel 2

# Set inner/outer gaps
gaps inner 5
gaps outer 0

# Defaults
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term footclient

