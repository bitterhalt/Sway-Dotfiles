#!/bin/bash
set -e

status() {
    if pgrep -f sway-autotiling > /dev/null; then
        echo "󰄹"
    else
        echo ""
    fi
}


toggle() {
if pgrep -f sway-autotiling > /dev/null; then
   notify-send -a sysnfo_notify-l ' autotiling disabled!'
   pkill -f sway-autotiling
else
   notify-send -a sysnfo_notify-l '󰄹 autotiling enabled!'
   ~/.config/sway/scripts/sway-autotiling
fi
pkill -SIGRTMIN+7 waybar
}


case "$1" in
    "status")
        status
        ;;
    "toggle")
        toggle
        ;;
    *)
        echo "Invalid argument"
        exit 1
        ;;
esac

